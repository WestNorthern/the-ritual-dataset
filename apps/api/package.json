{
  "name": "the-ritual-dataset-api",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "build:types": "tsc -p tsconfig.types.json",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "pretypecheck": "pnpm run prisma:generate",
    "prebuild": "pnpm run prisma:generate",
    "pretest": "pnpm run prisma:generate"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/rate-limit": "^10.3.0",
    "@prisma/client": "^6.17.1",
    "@trpc/server": "^11.6.0",
    "argon2": "^0.44.0",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.6.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@types/supertest": "^6.0.3",
    "prisma": "6.17.1",
    "supertest": "^7.1.4",
    "tsx": "^4.16.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
